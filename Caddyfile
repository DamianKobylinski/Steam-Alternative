# Caddyfile for Steam Alternative
# Using sslip.io for free wildcard DNS with SSL
# Format: subdomain.IP-WITH-DASHES.sslip.io
# Example: 139-59-144-215.sslip.io

# Main Next.js app
{$DOMAIN:localhost}.sslip.io {
    reverse_proxy localhost:3000
}

# Grafana dashboard
grafana.{$DOMAIN:localhost}.sslip.io {
    reverse_proxy localhost:3001
}

# Prometheus metrics
prometheus.{$DOMAIN:localhost}.sslip.io {
    reverse_proxy localhost:3001
}

# Uptime Kuma status page
uptime.{$DOMAIN:localhost}.sslip.io {
    reverse_proxy localhost:3002
}

# Alertmanager
alertmanager.{$DOMAIN:localhost}.sslip.io {
    reverse_proxy localhost:9093
}

# pgAdmin (optional - consider security)
pgadmin.{$DOMAIN:localhost}.sslip.io {
    reverse_proxy localhost:15432
}
