# Caddyfile for Steam Alternative
# Replace YOUR-IP with your VPS IP (use dashes instead of dots)
# Example: 143-198-100-50.traefik.me

# Main Next.js app
{$DOMAIN:localhost}.traefik.me {
    reverse_proxy localhost:3000
}

# Grafana dashboard
grafana.{$DOMAIN:localhost}.traefik.me {
    reverse_proxy localhost:3001
}

# Prometheus metrics
prometheus.{$DOMAIN:localhost}.traefik.me {
    reverse_proxy localhost:9090
}

# Uptime Kuma status page
uptime.{$DOMAIN:localhost}.traefik.me {
    reverse_proxy localhost:3002
}

# Alertmanager
alertmanager.{$DOMAIN:localhost}.traefik.me {
    reverse_proxy localhost:9093
}

# pgAdmin (optional - consider security)
pgadmin.{$DOMAIN:localhost}.traefik.me {
    reverse_proxy localhost:15432
}
